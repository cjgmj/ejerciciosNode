extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content
    each message in errorMessage
        div.user-message.user-message--error #{message}
    form.login-form(action="/signup", method="post")
        div.form-control
            label(for="email") E-Mail
            input#email(type="email", name="email", value=oldInput.email) 
        div.form-control
            label(for="password") Password
            input#password(type="password", name="password", value=oldInput.password) 
        div.form-control
            label(for="confirmPassword") Confirm Password
            input#confirmPassword(type="password", name="confirmPassword", value=oldInput.confirmPassword)
        input(type="hidden", name="_csrf", value=csrfToken) 
        button.btn(type="submit") Signup